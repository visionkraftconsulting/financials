# Database configuration
DB_HOST=localhost
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=your_db_name
DB_PORT=3306

# Twelve Data API key for market data
TWELVE_DATA_API_KEY=your_twelve_data_api_key

# Financial Modeling Prep API Key (optional, used for crypto price fallback)
FMP_API_KEY=your_fmp_api_key_here

# Polygon API Key (optional, used for crypto price fallback)
POLYGON_API_KEY=your_polygon_api_key_here

# JWT secret for signing authentication tokens
JWT_SECRET=your_jwt_secret_here

# Token expiration period for JWT (e.g. '24h', '1d')
TOKEN_EXPIRATION=24h

# CryptoPanic API credentials (set to your developer API plan values)
# CryptoPanic API credentials (set to your developer API plan values)
CRYPTOPANIC_API_BASE_URL=https://cryptopanic.com/api/developer/v2
CRYPTOPANIC_API_TOKEN=your_cryptopanic_api_token_here

# Investment summary cache TTL in seconds (optional, default 3600)
INVESTMENT_CACHE_TTL=3600
# Schwab OAuth2 credentials
SCHWAB_CLIENT_ID=your_schwab_client_id
SCHWAB_CLIENT_SECRET=your_schwab_client_secret
SCHWAB_REDIRECT_URI=https://your.domain.com/api/callback
# Email notifications (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false # true for SSL (port 465), false for other ports
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
# Sender address for outgoing emails (e.g., "App Name" <noreply@yourdomain.com>)
EMAIL_FROM="Your App Name" <noreply@yourdomain.com>
# Administrator email to receive new user registration notifications
ADMIN_EMAIL=info@visionkraftconsulting.com